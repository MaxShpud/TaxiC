<!DOCTYPE html>
<html ng-app="app" ng-controller="MainController as mainCtrl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Taxi Service</title>
    <base href="/">

    <link href="/Content/css" rel="stylesheet" />

    <script src="/bundles/jquery"></script>
    <script src="/bundles/angular"></script>
    <script src="/bundles/bootstrap"></script>

    <script src="~/AngularJS/app.js"></script>
    <script src="~/AngularJS/routes.js"></script>

    <script src="~/AngularJS/Controllers/main-controller.js"></script>
    <script src="~/AngularJS/Controllers/registration-controller.js"></script>
    <script src="~/AngularJS/Controllers/login-controller.js"></script>
    <script src="~/AngularJS/Controllers/home-controller.js"></script>

    <script src="~/AngularJS/Services/user-service.js"></script>
    <script src="~/AngularJS/Services/customer-service.js"></script>
</head>
<body ng-cloak>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" ng-href="/Home">Taxi Service</a>
            </div>
            <div ng-show="mainCtrl.loggedIn">
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{mainCtrl.username}} <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#" ng-click="mainCtrl.logOut()">Log Out</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <ng-view></ng-view>
    </div>

    <div class="navbar navbar-inverse navbar-fixed-bottom">
        <div class="container">
            <p class="navbar-text">&copy; 2018, Igor Kuzmanović</p>
        </div>
    </div>
</body>
</html>
