<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Taxi Service", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav"></ul>
            @if (ViewBag.User.IsLoggedIn)
            {
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Sign Out", "SignOut", "Login")</li>
                </ul>
            }
            else
            {
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Sign In", "Index", "Login")</li>
                    <li>@Html.ActionLink("Sign Up", "SignUpForm", "Login")</li>
                </ul>
            }
        </div>
    </div>
